# Environment Variables Template
# Use descriptive placeholders that guide developers
# Actual secrets should NEVER be committed

# Application Configuration
NODE_ENV=development
PORT=3000

# Database Connection (MongoDB)
MONGODB_URI=mongodb://localhost:27017/task_management_system

# JWT Authentication Secrets (MUST be long, complex, unique)
JWT_ACCESS_SECRET=your_extremely_long_and_complex_random_access_secret_here_minimum_64_characters
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your_extremely_long_and_complex_random_refresh_secret_here_minimum_64_characters
JWT_REFRESH_EXPIRY=7d

# Email Configuration (Optional but Recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# Optional Integrations
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Settings
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=15*60*1000

# Optional Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
